@model LeVanTru0714.Models.LVTSinhVien

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>

<h4>Sinh Viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LVTMaSinhVien" />
            <div class="form-group">
                <label asp-for="LVTTenSinhVien" class="control-label">Tên Sinh Viên</label>
                <input asp-for="LVTTenSinhVien" class="form-control" />
                <span asp-validation-for="LVTTenSinhVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LVTTuoi" class="control-label">Tuổi</label>
                <input asp-for="LVTTuoi" class="form-control" />
                <span asp-validation-for="LVTTuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
